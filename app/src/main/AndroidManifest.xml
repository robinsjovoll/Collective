<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.collective">
    android:installLocation="preferExternal" > <!--Prevent storage failure when testing-->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".implementation.view.LoadingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".implementation.view.RegisterActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".implementation.view.LoginActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".implementation.view.FindFlatActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".implementation.controller.MainMenuController"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".implementation.view.FlatmatesView"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>

    <!--android:theme="@style/AppTheme.NoActionBar"-->